pipeline{
agent any
parameters {
    string(
      name: 'VARIABLE',
      description: 'test',
      defaultValue: 'default'
    )
    string(
      name: 'Name',
      description: 'test',
      defaultValue: 'default'
    )
}
stages{
  stage('Execute Playbook1'){
       steps{
           ansiblePlaybook credentialsId: 'private_key', 
           disableHostKeyChecking: true, 
           colorized   : true,
           extras: "-e variable=${params.VARIABLE}", 
           installation: 'ansible', 
           inventory: 'dev.inv', 
           playbook: 'filecreate.yml'
     }
    }
    stage('Execute Playbook2'){
        steps{
           ansiblePlaybook credentialsId: 'private_key', 
           disableHostKeyChecking: true, 
           colorized   : true,
           extras: "-e http_host=${params.Name}", 
           installation: 'ansible', 
           inventory: 'dev.inv', 
           playbook: 'apache.yml'
        }
    }
  } 
}
